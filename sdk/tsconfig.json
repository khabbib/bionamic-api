{
	"include": ["src/**/*"],
	"compilerOptions": {
		"typeRoots": ["./node_modules/@types"],
		"target": "ESNEXT",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"outDir": "./dist/",
		"declaration": true,
		"allowJs": true,
		"checkJs": true,
		"pretty": false,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictBindCallApply": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"useDefineForClassFields": false,
		"plugins": [
			{
				"name": "ts-lit-plugin",
				"strict": true,
				"rules": {
					"no-invalid-css": "off"
				}
			}
		]
	}
}
